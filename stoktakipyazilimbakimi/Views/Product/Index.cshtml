@model PagedList.IPagedList<stoktakipyazilimbakimi.Models.Urunler>
@using PagedList.Mvc;
<link href="~/Content/PagedList.css" rel="stylesheet" type="text/css" />
@{
    ViewBag.Title = "Ürünler";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb mt-3">
        <li class="breadcrumb-item"><a href="/" class="text-dark">Anasayfa</a></li>
        <li class="breadcrumb-item active" aria-current="page">Ürünler</li>
    </ol>
</nav>

@if (TempData["message"] != null)
{
    <div class="form-group">
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <strong>Tebrikler!</strong> @TempData["message"]
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
    </div>
}

<p class="display-4">
    Ürünler <a href="@Url.Action("Add","Product")" class="btn btn-success badge">+</a>
</p>

<table class="table">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Ürün ID</th>
            <th scope="col">Ürün Ad</th>
            <th scope="col">Fiyat</th>
            <th scope="col">Stok Miktar</th>
            <th scope="col">İşlem</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@Html.DisplayFor(modelItem => item.UrunID)</th>
                <td>@Html.DisplayFor(modelItem => item.UrunAdi)</td>
                <td>@Html.DisplayFor(modelItem => item.UrunFiyat)</td>
                <td>45</td>
                <td>@Html.ActionLink("Edit", "Edit", "Product", new { id = item.UrunID }, new { @class = "btn btn-warning" }) @Html.ActionLink("Delete", "Delete", "Product", new { id = item.UrunID }, new { @class = "btn btn-danger" })</td>
            </tr>
        }
    </tbody>
</table>

@Html.PagedListPager(Model, page => Url.Action("Index", new { page }))
